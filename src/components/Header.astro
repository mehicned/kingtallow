---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { Button } from './ui/button';

const navigation = [
	{ href: '/', label: 'Home' },
	{ href: '/resources', label: 'Resources' },
	{ href: '/about', label: 'About' },
];
---

<header class="sticky top-0 z-40 border-b border-border/70 bg-background/80 backdrop-blur-xl">
	<div class="header-shell flex flex-wrap items-center gap-3 md:gap-4">
		<a class="group flex items-center gap-3" href="/">
			<div class="relative h-12 w-12 overflow-hidden rounded-[18px] border border-border/70 bg-card shadow-soft">
				<img src="/king.png" alt="King Tallow crown logo" class="h-full w-full object-cover" />
			</div>
			<div class="flex flex-col leading-tight">
				<span
					class="font-display text-[1.1rem] font-semibold text-foreground transition-colors duration-200 group-hover:text-primary"
					>{SITE_TITLE}</span
				>
				<span class="text-xs text-muted-foreground">Beef tallow, clarified.</span>
			</div>
		</a>
		<div class="flex flex-1 items-center justify-end gap-3">
			<nav class="flex flex-wrap items-center gap-2 md:gap-3">
				{navigation.map((item) => (
					<HeaderLink href={item.href}>{item.label}</HeaderLink>
				))}
			</nav>
			<Button asChild size="lg" variant="default" className="px-4">
				<a href="mailto:contact@kingtallow.com?subject=Newsletter%20signup">Join newsletter</a>
			</Button>
		</div>
	</div>
</header>
